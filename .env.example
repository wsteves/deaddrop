# Vercel Environment Variables
# Copy this to .env.local for local development
# Add these to your Vercel project dashboard for production

# Vercel Postgres (auto-configured by Vercel)
POSTGRES_URL=
POSTGRES_PRISMA_URL=
POSTGRES_URL_NON_POOLING=
POSTGRES_USER=
POSTGRES_HOST=
POSTGRES_PASSWORD=
POSTGRES_DATABASE=

# Vercel Blob Storage (auto-configured by Vercel)
BLOB_READ_WRITE_TOKEN=

# Optional: Web3.Storage for IPFS uploads
# Get your free API token at https://web3.storage
IPFS_API_TOKEN=

# Optional: Infura IPFS (alternative to Web3.Storage)
# Get credentials at https://infura.io
IPFS_PROJECT_ID=
IPFS_PROJECT_SECRET=

# Polkadot/Substrate
VITE_WS_ENDPOINT=wss://westend-rpc.polkadot.io
